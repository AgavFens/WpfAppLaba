<Window x:Class="WpfAppLaba.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppLaba"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="MainWindow" Height="260" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="ColourDgr"/>
        <TextBox x:Name="LoginTbx" Grid.Row="0" VerticalAlignment="Center" materialDesign:HintAssist.Hint="Логин"/>
        <PasswordBox x:Name="PasswordTbx" Grid.Row="1" VerticalAlignment="Center" materialDesign:HintAssist.Hint="Пароль"/>
        <Button Grid.Row="2" Content="Авторизоваться" Click="Button_Click" Background="Green"/>
    </Grid>
</Window>
