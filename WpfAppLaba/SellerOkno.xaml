<Window x:Class="WpfAppLaba.SellerOkno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppLaba"
        mc:Ignorable="d"
        Title="SellerOkno" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="337*"/>
            <RowDefinition Height="42*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="SteelBlue">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Покупка" Background="Green"></Button>
            <Button Grid.Column="1" Content="Сохраненные чеки" Background="Green"></Button>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>
        <Grid Grid.Row="1" Background="SteelBlue" Margin="0,337,0,0" Grid.RowSpan="2">
            <Button Content="Закрыть и выгрузить чек" Background="Green"/>
        </Grid>
    </Grid>
</Window>
